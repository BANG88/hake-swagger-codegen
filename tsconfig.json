{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"lib": [
			"dom",
			"es2016"
		],
		"target": "es5",
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": false,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": true,
		"allowSyntheticDefaultImports": true
	},
	"files": [
		"index.ts",
		"cli.ts",
		"test/test.ts"
	]
}
